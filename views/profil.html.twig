                            <div class="mr-3 flex flex-col items-center"> <span class="text-gray-400 block">Last Connexion</span> <span class="font-bold text-black text-xl">{{ user.last_connection }}</span> </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

